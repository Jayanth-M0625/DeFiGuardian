{
  "name": "@guardian-protocol/deploy",
  "version": "1.0.0",
  "description": "Deployment scripts for Guardian Protocol contracts",
  "scripts": {
    "setup": "./scripts/setup-contracts.sh",
    "compile": "npm run setup && hardhat compile",
    "node": "hardhat node",
    "deploy:local": "hardhat run scripts/deploy-local.ts --network localhost",
    "deploy:sepolia": "hardhat run scripts/deploy-local.ts --network sepolia",
    "update-sdk": "ts-node scripts/update-sdk-addresses.ts",
    "start": "./scripts/start-local.sh",
    "start:full": "./scripts/start-local.sh && npm run deploy:local",
    "test": "hardhat test",
    "test:integration": "hardhat run scripts/test-integration.ts --network localhost",
    "test:e2e": "hardhat run scripts/test-e2e.ts --network localhost"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@types/node": "^20.0.0",
    "dotenv": "^16.3.1",
    "hardhat": "^2.19.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.0"
  }
}
